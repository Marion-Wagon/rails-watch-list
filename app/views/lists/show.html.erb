<div class="container mt-5 mb-5 ">
  <div class="row mb-5 justify-content-between">
    <div class="col-auto mr-auto">
      <h1><%= @list.name %> </h1>
    </div>
    <div class="col-auto">
      <%= link_to "Add a movie", new_list_bookmark_path(@list), class: 'btn btn-primary' %>
    </div>
  </div>
  <div class="row mb-5">
    <% @bookmarks.each do |bookmark| %>
      <div class="col-xs-12 col-md-3">
        <div class="card">
          <img class="card-img-top" src="<%= bookmark.movie.poster_url %>" alt="<%= bookmark.movie.title %>">
          <div class="card-body">
            <h2 class="card-title"><%= bookmark.movie.title %></h2>
            <span class="card-subtitle text-muted"> <%= bookmark.movie.rating %></span>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-subtitle text-muted"><%= bookmark.comment %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
